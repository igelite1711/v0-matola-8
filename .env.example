# Authentication - REQUIRED
# Generate secure random strings (minimum 32 characters)
# Example: openssl rand -hex 32
JWT_SECRET=your-secure-jwt-secret-here-minimum-32-chars
REFRESH_SECRET=your-secure-refresh-secret-here-minimum-32-chars

# Database - REQUIRED
# For local development: file:./dev.db (SQLite)
# For production: postgresql://user:password@host:5432/matola_prod
DATABASE_URL=file:./dev.db

# Redis - REQUIRED for token blacklist and job queue
# Local: redis://localhost:6379
# Upstash managed: https://[user]:[password]@[host]:[port]
REDIS_URL=redis://localhost:6379
UPSTASH_REDIS_URL=

# Security & CORS - REQUIRED
# Comma-separated list of allowed origins
# Development: http://localhost:3000
# Production: https://matola.mw,https://app.matola.mw,https://admin.matola.mw
ALLOWED_ORIGINS=http://localhost:3000

# Payment Integrations
# Airtel Money API credentials
AIRTEL_API_KEY=
AIRTEL_API_SECRET=

# TNM Mpamba API credentials
TNM_API_KEY=
TNM_API_SECRET=

# SMS/Messaging - Twilio
# Get from https://www.twilio.com/console
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# WhatsApp (via Twilio)
TWILIO_WHATSAPP_NUMBER=

# Monitoring & Logging
# Sentry error tracking
SENTRY_DSN=

# Application Environment
# Values: development, staging, production
NODE_ENV=development

# Feature Flags
# Enable/disable features for testing
ENABLE_NOTIFICATIONS=true
ENABLE_PAYMENTS=true
ENABLE_WORKERS=true

# Logging
# Values: debug, info, warn, error
LOG_LEVEL=info

# PWA / App Settings
# App name for PWA manifest
APP_NAME=Matola Logistics

# External Services
# Mapbox API for location services (optional)
MAPBOX_API_KEY=

# Analytics (optional)
GOOGLE_ANALYTICS_ID=
